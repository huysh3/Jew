.footbar {

}

.footbar-content {
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 4rpx 0;
  width: 750rpx;
  background-color: #FFF;
  display: flex;
  z-index:999;
  border-top: 1rpx solid #333;
}

.footbar-item {
  flex: 1;
  text-align: center !important;
  color: #fff;
  position: relative;
}

.footbar-img {
  width: 32rpx;
  height: 32rpx;
  margin-top: 4rpx;
  text-align: center !important;
}

.footbar-item .title {
  font-weight: bold;
  font-size: 22rpx;
  color: #000;
  position: relative;
  text-align: center !important;
  padding-bottom: 0;
  margin-bottom: 0;
}

.footbar-item .title.active {
  font-weight: bold;
  color: #B62A18;
}

.badge {
  background-color: rgb(208, 44, 15);
  color: #fff;
  padding: 5rpx;
  font-size: 20rpx;
  margin: 0;
  position: absolute;
  top: 6rpx;
  right: 50rpx;
  border-radius: 50%;
  width: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  text-align: center;
}
