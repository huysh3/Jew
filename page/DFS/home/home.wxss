  background-color: #fff;
}

.cutline {
  width: 750rpx;
  height: 50rpx;
  background-color: #f0f0f0;
}

.home-banner {
  width: 750rpx;
  margin-top: -5rpx;
  float: left;
}

.coupon-banner {
  width: 750rpx;
  padding: 20rpx 0;
  float: left;
}

